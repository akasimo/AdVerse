{
	"compilerOptions": {
		"target": "ES2020", // Use the latest ECMAScript features
		"module": "CommonJS", // Output as ES modules
		"moduleResolution": "node", // Resolve modules in Node.js style
		"esModuleInterop": true, // Enables compatibility with CommonJS modules
		"skipLibCheck": true, // Skip type checking of declaration files
		"forceConsistentCasingInFileNames": true, // Ensure consistent file naming
		"strict": true, // Enable all strict type-checking options
		"outDir": "./dist", // Output directory for compiled files
		// Root directory of source files
		"baseUrl": ".", // Base directory for resolving non-relative module names
		"paths": {
			"*": ["node_modules/*"]
		},
		"resolveJsonModule": true // Allow importing JSON modules
	},
	"include": ["src/**/*"], // Include all TypeScript files in the src folder
	"exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
